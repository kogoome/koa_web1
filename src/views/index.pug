doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet")
    script(src="/public/js/index.js")
  body 
    div.grid-cols-1.h-10
    div.grid-cols-2.flex.h-screen.w-full
      aside.bg-red-100.w-20.relative.z-20.flex-shrink-0.px-2
      aside.bg-green-100.w-40.relative.z-20.flex-shrink-0.px-2
      div.bg-blue-100.flex.flex-col.flex-1.w-full.overflow-y-auto
        h1.font-bold.text-3xl INDEX
        div.text-2xl rest api
        div
          a(href="/acount") acount
        div
          a(href="/acount/@:kogoome") acount/:id params
        div
          input#input_id(type="text" value="kogoome")
          button(onclick="inputName()") @:id
        div
          a(href="/acount/signin") signin
        div
          a(href="/acount/signup") signup
